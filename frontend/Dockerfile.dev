FROM node:18-alpine
WORKDIR /app

# Copy package files first (for better caching)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source files (node_modules excluded via .dockerignore)
COPY vite.config.js ./
COPY index.html ./
COPY src ./src

EXPOSE 5173

CMD ["npm","run","dev","--","--host","0.0.0.0"]
