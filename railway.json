{
  "$schema": "https://railway.app/json-schema/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "buildCommand": "",
    "startCommand": "bash /app/entrypoint.sh"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 3,
    "healthchecks": {
      "liveness": {
        "type": "http",
        "httpPath": "/readyz",
        "initialDelaySeconds": 30,
        "periodSeconds": 10
      },
      "readiness": {
        "type": "http",
        "httpPath": "/readyz",
        "initialDelaySeconds": 30,
        "periodSeconds": 5
      }
    }
  }
}
